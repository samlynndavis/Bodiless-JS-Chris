{
  "name": "@bodiless/documentation",
  "version": "1.0.0-rc.38",
  "description": "A tool to aggregate markdown files for rendering by docsify",
  "author": "Erik Summerfield <esummer3@its.jnj.com>",
  "homepage": "",
  "license": "Apache-2.0",
  "main": "./lib/index.js",
  "bin": {
    "bl-docs-build": "./bin/bl-docs-build"
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__",
    "bin": "bin"
  },
  "files": [
    "/bin",
    "/lib",
    "/doc",
    "/resources",
    "/bodiless.docs.json",
    "/getDocs.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johnsonandjohnson/bodiless-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "run-p build:lib",
    "build:lib": "tsc -p ./tsconfig.json",
    "build:watch": "npm run build:lib -- --watch",
    "build:api-doc": "typedoc --options ../../typedoc.js --out doc/api ./src",
    "clean": "rimraf \"lib/*\" && rimraf tsconfig.tsbuildinfo && rimraf \"doc/api\""
  },
  "dependencies": {
    "@bodiless/cli": "^1.0.0-rc.38",
    "@types/fs-extra": "^8.0.0",
    "@types/lodash": "^4.14.158",
    "@types/lodash.flow": "^3.5.6",
    "@types/walk": "^2.3.0",
    "dotenv": "^8.2.0",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.19",
    "walk": "^2.3.14",
    "walkdir": "^0.4.1"
  },
  "devDependencies": {
    "ts-node": "^8"
  }
}
