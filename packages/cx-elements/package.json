{
  "name": "@bodiless/cx-elements",
  "version": "0.3.7",
  "description": "Layout components for the bodiless cx design system",
  "author": "Chris Odem <coden@its.jnj.com>",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "sideEffects": false,
  "typings": "lib/index.d.ts",
  "files": [
    "/lib",
    "site.tailwind.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johnsonandjohnson/bodiless-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "run-p build:lib copy build:api-doc",
    "build:api-doc": "typedoc --out doc/api src",
    "build:lib": "tsc -p ./tsconfig.json",
    "build:watch": "npm run build:lib -- --watch",
    "copy": "copyfiles -u 1 \"./src/*.css\" \"./lib/\"",
    "clean": "rimraf \"lib/*\" && rimraf tsconfig.tsbuildinfo && rimraf \"doc/api\""
  },
  "dependencies": {
    "@bodiless/components": "^0.3.7",
    "@bodiless/core": "^0.3.7",
    "@bodiless/fclasses": "^0.3.7",
    "@types/react-helmet": "^5.0.14",
    "lodash": "^4.17.19",
    "mobx": "^5.8.0",
    "mobx-react": "^7.2.1",
    "react-contenteditable": "^3.2.6",
    "react-dropzone": "^10.1.5",
    "react-helmet": "^5.2.0",
    "react-id-generator": "^3.0.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "tailwindcss": "^2.0.2",
    "tailwindcss-dir": "^4.0.0",    
    "@types/uuid": "^3.4.4"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
