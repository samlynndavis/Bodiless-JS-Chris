{
  "name": "@bodiless/i18n",
  "version": "1.0.0-rc.25",
  "description": "Library to provide multilingual support for Bodiless",
  "author": "Konstantin Mishur <kmishur@its.jnj.com>",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "/lib",
    "/doc",
    "/bodiless.docs.json",
    "/getDocs.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johnsonandjohnson/bodiless-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:api-doc",
    "build:lib": "tsc -p ./tsconfig.json",
    "build:watch": "npm run build:lib -- --watch",
    "build:api-doc": "typedoc --options ../../typedoc.js --out doc/api src",
    "clean": "rimraf \"lib/*\" && rimraf tsconfig.tsbuildinfo && rimraf \"doc/api\""
  },
  "dependencies": {
    "@bodiless/cli": "^1.0.0-rc.25",
    "@bodiless/core": "^1.0.0-rc.25",
    "@bodiless/fclasses": "^1.0.0-rc.25",
    "lodash": "^4.17.19",
    "typedoc": "^0.22.6",
    "typescript": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
