{
  "name": "@bodiless/richtext",
  "version": "0.3.1",
  "description": "Provide Rich Text Component",
  "author": "Erik Summerfield <esummer3@its.jnj.com>",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "sideEffects": false,
  "typings": "lib/index.d.ts",
  "files": [
    "/lib",
    "/bin",
    "/patches",
    "/doc",
    "/bodiless.docs.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johnsonandjohnson/bodiless-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc --version && tsc -p ./tsconfig.json && npm run build:api-doc",
    "build:watch": "npm run build -- --watch",
    "build:api-doc": "typedoc --out doc/api src",
    "lint": "tslint ./src/**/*.ts?x",
    "clean": "rimraf \"lib/*\" && rimraf tsconfig.tsbuildinfo && rimraf \"doc/api\"",
    "postinstall": "node bin/apply-patches.js"
  },
  "dependencies": {
    "@bodiless/core": "^0.3.1",
    "@bodiless/fclasses": "^0.3.1",
    "@emotion/core": "^10.0.14",
    "@emotion/css": "^10.0.14",
    "@emotion/styled": "^10.0.14",
    "is-hotkey": "^0.1.6",
    "lodash": "^4.17.19",
    "mobx": "^5.8.0",
    "mobx-react": "^5.4.3",
    "mobx-react-lite": "^1.3.1",
    "rc-tooltip": "^5.1.1",
    "react-fast-compare": "^2.0.4",
    "shelljs": "^0.8.4",
    "slate": "^0.71.0",
    "slate-history": "^0.66.0",
    "slate-hyperscript": "^0.67.0",
    "slate-react": "^0.71.0",
    "uuid": "^3.3.2"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/rc-tooltip": "^3.7.1",
    "@types/uuid": "^3.4.4"
  }
}
