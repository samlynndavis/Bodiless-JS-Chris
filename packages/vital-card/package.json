{
  "name": "@bodiless/vital-card",
  "version": "1.0.0-beta.7",
  "description": "Card component to display information through an image,text or other media content",
  "author": "Dewen Li <dli94@its.jnj.com>",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "sideEffects": false,
  "typings": "lib/index.d.ts",
  "files": [
    "/lib",
    "/bodiless.docs.json",
    "/doc",
    "site.tailwind.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johnsonandjohnson/bodiless-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run copy && tsc -p ./tsconfig.json && npm run build:api-doc",
    "build:watch": "npm run build -- --watch",
    "build:api-doc": "typedoc --out doc/api src",
    "lint": "tslint ./src/**/*.ts?x",
    "clean": "rimraf \"lib/*\" && rimraf tsconfig.tsbuildinfo && rimraf \"doc/api\"",
    "copy": "copyfiles -u 1 \"./src/**/*.{css,png}\" \"./lib/\""
  },
  "dependencies": {
    "@bodiless/core": "^1.0.0-beta.7",
    "@bodiless/fclasses": "^1.0.0-beta.7",
    "@bodiless/vital-elements": "^1.0.0-beta.7",
    "@bodiless/vital-image": "^1.0.0-beta.7",
    "lodash": "^4.17.19",
    "uuid": "^3.3.2"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  }
}
