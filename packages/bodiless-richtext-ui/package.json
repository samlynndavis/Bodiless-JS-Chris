{
  "name": "@bodiless/richtext-ui",
  "version": "1.0.0-rc.28",
  "description": "Default UI for Bodiless richtext components",
  "author": "Ivan Rudiuk <IRudiuk@its.jnj.com>",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "sideEffects": false,
  "typings": "lib/index.d.ts",
  "files": [
    "/lib",
    "/doc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johnsonandjohnson/bodiless-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "run-p build:lib",
    "build:lib": "tsc -p ./tsconfig.json",
    "build:watch": "npm run build:lib -- --watch",
    "build:api-doc": "typedoc --options ../../typedoc.js --out doc/api ./src",
    "clean": "rimraf \"lib/*\" && rimraf tsconfig.tsbuildinfo && rimraf \"doc/api\""
  },
  "dependencies": {
    "@bodiless/fclasses": "^1.0.0-rc.28",
    "@bodiless/richtext": "^1.0.0-rc.28",
    "@bodiless/ui": "^1.0.0-rc.28",
    "lodash": "^4.17.19"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
